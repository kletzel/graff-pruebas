<odoo>
	<data>
		<report id="graff_rep_resmov"
			string="Reporte Resumen de Mkvimientos Orden de Produccion"
			model="graff_rep_resmov.wizard"
			report_type="qweb-pdf"
			name="graff_rep_resmov.reporte_resmov_template"
			/>
		<template id="reporte_resmov_template">
		<t t-call="web.html_container">
		<t t-call="web.external_layout">
		      <style>
			table {
			      border: none;
			      border-collapse: collapse;
			      border-spacing: 10;
			      width: 85%;
			}
		     </style>

		    <div class="page"> 		    
		     <div>
		    <h2> Resumen de Movimientos </h2>  <h2> </h2> <p> </p>	    
		     <t t-set="id_producto_ant" t-value="a"/>
		     <t t-set="cantidad_total_producto" t-value="0"/>
		     <t t-foreach="docs" t-as="o"> 
			 <t t-set="id_producto_act" t-value="o['resmov_producto_codigo']"/> 
		         <t t-set="res_det" t-value="o['res_det']"/>
			 <t t-if="id_producto_act != id_producto_ant">
			 <table>
			    <tr>
			    <th scope="col"><div class="col" align="center"> PRODUCTO : </div></th>
			     <!-- <td> <span t-esc="o['resmov_producto_codigo']"/></td>-->   	     
			     <td><div class="col"> <span t-esc="id_producto_act"/></div></td>   	     
			     <th scope="col"><div class="col" align="center"> DESCRIPCION : </div></th>
			     <td><div class="col"> <span t-esc="o['resmov_producto_nombre']"/></div></td>	    
		            </tr>
	                 </table>
		         </t>
		   <h2> </h2>
			   <table>
			    <t t-if="id_producto_act != id_producto_ant">  
			    <tr>
			     <th scope="col"><div class="col" align="center"> FECHA</div> </th>
			     <th scope="col"><div class="col" align="center"> DOCTO.</div> </th>
			     <th scope="col"><div class="col" align="right"> CANTIDAD</div> </th>
		            </tr>
			    </t>
			    <t t-if="res_det != 1">  
			    <tr>
			    <td><div class="col" align="center"> <span t-esc="o['resmov_fecha_mrp']"/></div></td>     	     
			    <td><div class="col" align="center"> <span t-esc="o['resmov_docto_mrp']"/></div></td>   	     
			    <td><div class="col" align="right"> <span t-esc="o['resmov_producto_cant']"/></div></td>    	     
		            </tr>
			    </t>
			    <t t-if="id_producto_act == id_producto_ant and res_det == 1">  
			    <tr>
			    <td><div class="col"> </div></td>     	     
			    <th><div class="col" align="right"> Subtotal Producto: </div></th>   	     
			    <td><div class="col" align="right"> <span t-esc="o['resmov_producto_cant']"/></div></td>    	     
		            </tr>
			    <tr>
		            <td colspan="5"><div style="border-width: 2px; border-style: dotted; border-color: black; "/></td>		    
		            </tr>
			    </t>
	                   </table>
		   <h2> </h2>
			    <t t-set="id_producto_ant" t-value="id_producto_act"/>
		         </t>
		      </div> 
		    </div> 
		   </t>
		   </t>
                </template>
	</data>
</odoo>


